@page
@model ServiceHost.Pages.EditArticleModel
@{
    ViewData["Title"] = "ویرایش مقاله";
}

<div class="col-12 mb-3">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="col-6 mr-auto ml-auto text-center">
        <h1 class="border-bottom">ویرایش مقاله @Model.Command?.Title</h1>
    </div>
</div>

<form class="mr-auto ml-auto" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.Title"></label>
            <input class="form-control" asp-for="@Model.Command.Title">
            <span asp-validation-for="@Model.Command.Title" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.Picture"></label>
            <input class="form-control" asp-for="@Model.Command.Picture" accept="image/*">
            <span asp-validation-for="@Model.Command.Picture" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.PictureAlt"></label>
            <input class="form-control" asp-for="@Model.Command.PictureAlt">
            <span asp-validation-for="@Model.Command.PictureAlt" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.PictureTitle"></label>
            <input class="form-control" asp-for="@Model.Command.PictureTitle">
            <span asp-validation-for="@Model.Command.PictureTitle" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.Command.Slug"></label>
            <input class="form-control" asp-for="@Model.Command.Slug">
            <span asp-validation-for="@Model.Command.Slug" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.Command.ShortDescription"></label>
            <textarea class="form-control" asp-for="@Model.Command.ShortDescription"></textarea>
            <span asp-validation-for="@Model.Command.ShortDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Command.Description"></label>
        <textarea rows="5" type="text" class="form-control" asp-for="@Model.Command.Description"></textarea>
        <span asp-validation-for="@Model.Command.Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id" />
    <button type="submit" class="btn btn-success">ویرایش</button>
    <a asp-page="./Index" class="btn btn-dark">انصراف</a>
</form>